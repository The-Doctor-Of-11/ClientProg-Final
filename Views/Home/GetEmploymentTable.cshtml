@model Project3_FinalExam.ViewModels.EmploymentTableViewModel

<h2>@Model.Title</h2>

<div id="jsGrid"></div>

<script src="~/jquery/jquery.js"></script>
<script src="~/jqueryui/jquery-ui.js"></script>

<script src="~/jsgrid/jsgrid.js"></script>
<link href="~/jsgrid/jsgrid-theme.css" rel="stylesheet" />
<link href="~/jsgrid/jsgrid.css" rel="stylesheet" />

<script>
    $("#jsGrid").jsGrid({

        width: "100%",
        height: "90%",

        inserting: false,
        editing: false,
        sorting: true,
        paging: true,

        pageSize: 15,
        pageButtonCount: 5,

        data: @Html.Raw(Json.Serialize(Model.employmentTable)),

        fields: [
            { name: "employer", type: "text", width: 150, title: "Employer" },
            { name: "degree", type: "text", width: 50, title: "Degree" },
            { name: "city", type: "text", width: 100, title: "City" },
            { name: "title", type: "text", width: 100, title: "Title" },
            { name: "startDate", type: "text", width: 100, title: "Start Date" },
        ]

    })
</script>